{
  "name": "chatbot-ui",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "dev": "DEV_MODE=true dotenv vite",
    "build": "vite build --mode client && vite build --mode server",
    "build:lib": "vite build --mode lib && tsc --project tsconfig.lib.json && node scripts/add-commit-hash.js",
    "start": "node build/index.js",
    "lint": "tsc && biome lint --error-on-warnings ./src",
    "format": "biome check --write --unsafe .",
    "test": "vitest run"
  },
  "dependencies": {
    "@hono/react-renderer": "^1.0.1",
    "@hono/zod-validator": "^0.7.2",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "hono": "^4.8.12",
    "lucide-react": "^0.525.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@hono/vite-build": "^1.7.0",
    "@hono/vite-dev-server": "^0.20.0",
    "@shadcn/ui": "^0.0.4",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^24.2.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/react-syntax-highlighter": "^15.5.13",
    "dotenv-cli": "^8.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5.9.2",
    "vite": "^7.0.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
