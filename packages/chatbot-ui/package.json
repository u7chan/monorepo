{
  "name": "chatbot-ui",
  "type": "module",

  "scripts": {
    "dev": "DEV_MODE=true dotenv vite",
    "build": "vite build --mode client && vite build --mode server",
    "build:lib": "vite build --mode lib && node scripts/generate-lib-index.js",
    "start": "node dist/index.js",
    "lint": "tsc && biome lint --error-on-warnings ./src",
    "format": "biome check --write --unsafe .",
    "test": "vitest run"
  },
  "dependencies": {
    "@hono/react-renderer": "^1.0.1",
    "@hono/zod-validator": "^0.7.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "hono": "^4.7.11",
    "lucide-react": "^0.513.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.0",
    "zod": "^3.25.51"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@hono/vite-build": "^1.6.2",
    "@hono/vite-dev-server": "^0.19.1",
    "@shadcn/ui": "^0.0.4",
    "@tailwindcss/postcss": "^4.1.8",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "@types/react-syntax-highlighter": "^15.5.13",
    "dotenv-cli": "^8.0.0",
    "postcss": "^8.5.4",
    "tailwindcss": "^4.1.8",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.2"
  }
}
