{
  "name": "portfolio",
  "type": "module",
  "scripts": {
    "dev": "dotenv -- vite --mode dev --host 0.0.0.0",
    "typegen": "vite build --mode typegen",
    "build": "vite build",
    "start": "NODE_ENV=production bunx tsx ./src/server/node-server.ts",
    "lint": "tsc && biome lint ./src",
    "format": "biome check ./src --write --unsafe",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed:users": "dotenv -- bun run src/db/seeders/users.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.4",
    "@hono/standard-validator": "^0.1.2",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-router": "^1.121.21",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.7.11",
    "openai": "^5.5.1",
    "pg": "^8.16.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "remark-gfm": "^4.0.1",
    "tsx": "^4.20.3",
    "uuid": "^11.1.0",
    "uuidv7": "^1.0.2",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@hono/vite-dev-server": "^0.19.1",
    "@tailwindcss/postcss": "^4.1.10",
    "@tanstack/react-router-devtools": "^1.121.21",
    "@tanstack/router-plugin": "^1.121.21",
    "@types/node": "^22.15.32",
    "@types/pg": "^8.15.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-syntax-highlighter": "^15.5.13",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.31.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
