    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.8",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
