{
  "name": "portfolio",
  "type": "module",
  "scripts": {
    "dev": "dotenv -- vite --mode dev --host 0.0.0.0",
    "typegen": "vite build --mode typegen",
    "build": "vite build",
    "start": "NODE_ENV=production dotenv -- bunx tsx ./src/server/node-server.ts",
    "lint": "tsc && biome lint ./src",
    "format": "biome check ./src --write --unsafe",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed:users": "dotenv -- bun run src/db/seeders/users.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@hono/standard-validator": "^0.1.5",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/react-query": "^5.90.11",
    "@tanstack/react-router": "^1.139.6",
    "crypto-js": "^4.2.0",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.6",
    "openai": "^6.9.1",
    "pg": "^8.16.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1",
    "tsx": "^4.20.6",
    "uuidv7": "^1.0.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@google/gemini-cli": "^0.15.4",
    "@hono/vite-dev-server": "^0.23.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@tanstack/react-router-devtools": "^1.139.6",
    "@tanstack/router-plugin": "^1.139.6",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4"
  }
}