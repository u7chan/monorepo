{
  "name": "portal",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "dev:mock": "USE_MOCK_DATA=true bun --hot src/index.ts",
    "start": "NODE_ENV=production bun src/index.ts",
    "start:mock": "USE_MOCK_DATA=true NODE_ENV=production bun src/index.ts",
    "lint": "oxlint .",
    "lint:fix": "oxlint . --fix",
    "format": "oxfmt .",
    "format:check": "oxfmt . --check"
  },
  "dependencies": {
    "bun-plugin-tailwind": "^0.1.2",
    "react": "^19",
    "react-dom": "^19",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0"
  }
}
