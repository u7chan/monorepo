// TODO: ここのマスタ内容が変更された時に Github Actions でルートのREADMEに自動反映したい。
{
  "customizations": {
    "vscode": {
      "settings": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true,
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter",
          "editor.formatOnSave": true,
          "editor.formatOnType": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": "always"
          }
        },
        "isort.args": [
          "--profile",
          "black"
        ]
      },
      "extensions": [
        "ms-python.black-formatter",
        "ms-python.flake8",
        "ms-python.isort",
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "tomoki1207.pdf"
      ]
    }
  }
}
